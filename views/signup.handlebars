{{!-- Sign up section --}}
 <div class="login-container">
  <form class="signup-form form">
    <h1 class="form__title">Create Account</h1>
    <div class="form__input-group">
        {{!-- <label for="username-signup">username:</label> --}}
        <input type="text" id="username-signup" class="form__input" autofocus placeholder="Username"/>
    </div>
    <div class="form__input-group">
        {{!-- <label for="email-signup">email:</label> --}}
        <input type="text" id="email-signup" class="form__input" autofocus placeholder="Email"/>
    </div>
    <div class="form__input-group">
        {{!-- <label for="password-signup">password:</label> --}}
        <input type="password" id="password-signup" class="form__input" autofocus placeholder="Password"/>
    </div>
    <div class="form__input-group">
        <button class="button" type="submit">signup</button>
    </div>
  
    <p class="form__text">
    <a class="form__link" href="/login" id="linkLogin">Already have an account? Sign in</a>
    </p>
</form>
</div>



<script src="/static/javascript/login-signup.js"></script>


